<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/colorBackgroundLight">
    <item>
        <selector>
            <item android:id="@android:id/mask"  android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="16dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle" android:state_enabled="false">
                    <solid android:color="@color/colorBackgroundLight"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>


            <item>
                <shape android:shape="rectangle" android:state_enabled="true">
                    <solid android:color="@color/colorPrimaryDark"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>

        </selector>
    </item>

</ripple>